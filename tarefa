//questão 1

int main()
{   float mb,b,gb,kb;
    printf("\n Digite quantidade de Megabytes\n");
    scanf("%f",&mb);
    b = (mb*1024)*1024;
    gb = (mb/1024);
    kb = (mb*1024);
    printf("\n Em Bytes = %3.f", b);
    printf("\n Em Gigabytes = %f ",gb);
     printf("\n Em kb = %3.f ",kb);
    return 0;
}

